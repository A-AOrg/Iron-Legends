<div class="champwrap">
    <body>
        <h1>{{championDetail.champion.name}}</h1>
        <h1>{{championDetail.champion.title}}</h1>
        <img src={{championDetail.champion.splashart}} alt="">
    </body>
</div>

<div class="champbuildtxt">
<h1>Builds</h1>
</div>

{{#if championDetail.build}}
  {{#each championDetail.build as |build|}}
    <div class="container text-center" style="max-width: 900px;">
        <div class="col align-self-center mt-5">
            <div class="card mb-3 bg-transparent my-4">
                <div class="row g-0">
                    <div class="col-md-8">
                        <div class="card-body row">
                            <div class="col-sm my-2">
                                <div class="m-3 card" style="width: 10rem;">
                                    <img src={{build.boots}} class="card-img" alt="">
                                </div>
                            </div>
                            
                            <div class="col-sm my-2">
                                <div class="m-3 card" style="width: 10rem;">
                                    <img src={{build.mythic}} class="card-img" alt="">
                                </div>
                            </div>
                            
                            <div class="col-sm my-2">
                                <div class="m-3 card" style="width: 10rem;">
                                    <img src={{build.item1}} class="card-img" alt="">
                                </div>
                            </div>
                            <div class="col-sm my-2">
                                <div class="m-3 card" style="width: 10rem;">
                                    <img src={{build.item2}} class="card-img" alt="">
                                </div>
                            </div>
                            <div class="col-sm my-2">
                                <div class="m-3 card" style="width: 10rem;">
                                    <img src={{build.item3}} class="card-img" alt="">
                                </div>
                            </div>
                            <div class="col-sm my-2">
                                <div class="m-3 card" style="width: 10rem;">
                                    <img src={{build.item4}} class="card-img" alt="">
                                </div>
                            </div>
                            <div class="col-sm my-2">
                                <div class="m-3 card" style="width: 10rem;">
                                    <img src={{build.item5}} class="card-img" alt="">
                                </div>
                            </div>
                            <div class= "detailb">
                              <a class= "fs-5 text-black active" href="/builds/{{ build._id }}">Build Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>    
    </div>
  {{/each}}
{{/if}}