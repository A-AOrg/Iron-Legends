                                        <p class="card-text p-2 fs-5 position-absolute bottom-0 w-100 text-white">{{ build.item1.name }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>    
</div>