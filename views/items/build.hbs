<div class="col-sm my-2">
    <div class="m-3 card" style="width: 10rem;">
        <img src={{build.boot.image}} class="card-img" alt="">
        <div class="card-img-overlay">
            <p class="card-text p-2 fs-5 position-absolute bottom-0 w-100 text-white">{{ build.boot.name }}</p>
        </div>
    </div>
</div>

<div class="col-sm my-2">
    <div class="m-3 card" style="width: 10rem;">
        <img src={{build.mythic.image}} class="card-img" alt="">
        <div class="card-img-overlay">
            <p class="card-text p-2 fs-5 position-absolute bottom-0 w-100 text-white">{{ build.mythic.name }}</p>
        </div>
    </div>
</div>

{{#each build.legendaries as |item|}}
    <div class="col-sm my-2">
        <div class="m-3 card" style="width: 10rem;">
            <img src={{item.image}} class="card-img" alt="">
            <div class="card-img-overlay">
                <p class="card-text p-2 fs-5 position-absolute bottom-0 w-100 text-white">{{ item.name }}</p>
            </div>
        </div>
    </div>
{{/each}}